!------------
! Xft config
!------------

Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

!--------------
! Color Scheme
!--------------

#include ".colors/badwolf"

!-----------
! st config
!-----------

st.font: tewi:size=9:antialias=true:autohint=true
st.fontalt0: RobotoMono Nerd Font:size=9:antialias=true:autohint=true
st.alpha: 1

!--------------
! xterm config
!--------------

XTerm.termName: xterm-256color
XTerm.vt100.locale: true
XTerm.vt100.metaSendsEscape: true
XTerm.v100.saveLines: 15000
XTerm.vt100.scrollBar: false
XTerm.vt100.geometry: 80x24
XTerm.vt100.selectToClipboard: true
XTerm.vt100.faceName: tewi:size=9:antialias=true:autohint=true
XTerm.allowBoldFonts: false
XTerm.borderWidth: 0
XTerm.internalBorder: 10
XTerm.vt100.bellIsUrgent: true
XTerm.cutToBeginningOfLine: false
XTerm.cutNewline: false

!-------------
! ROFI config
!-------------

rofi.modi:                           drun,run
rofi.sidebar-mode:                   true
rofi.terminal:                       st
rofi.run-command:                    {cmd}
rofi.run-shell-command:              {terminal} -e {cmd}
rofi.ssh-client:                     ssh
rofi.ssh-command:                    {terminal} -e "{ssh-client} {host}"
rofi.opacity:                        100
rofi.width:                          25
rofi.lines:                          7
rofi.columns:                        1
rofi.font:                           Roboto Mono 8
rofi.drun-icon-theme:                Papirus
!rofi.show-icons:                    true
rofi.bw:                             1
rofi.location:                       0
rofi.padding:                        20
rofi.levenshtein-sort:               true
rofi.case-sensitive:                 false
rofi.fuzzy:                          false
rofi.line-margin:                    10
rofi.separator-style:                none
rofi.hide-scrollbar:                 true
rofi.markup-rows:                    false
rofi.scrollbar-width:                0
rofi.color-enabled:                  true
!rofi.theme:                          .config/rofi/nord
